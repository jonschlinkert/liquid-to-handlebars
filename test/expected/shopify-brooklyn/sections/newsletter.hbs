<div class="newsletter">
  <div class="wrapper">
    {{#unless (is section.settings.heading blank)}}
      <div class="section-header text-center">
        <h2 class="h1 section-header__title">{{escape section.settings.heading}}</h2>
        {{#if (is section.settings.subheading blank)}}
          <hr class="hr--small">
        {{/if}}
      </div>
    {{/unless}}
    {{#unless (is section.settings.subheading blank)}}
      <div class="section-subheading text-center">
        <p>{{escape section.settings.subheading}}</p>
        <hr class="hr--small">
      </div>
    {{/unless}}
    {{#form 'customer'}}
      {{default_errors form.errors}}
      {{#if form.posted_successfully}}
        <div class="newsletter--form">
          <div class="note form-success">{{t 'general.newsletter_form.newsletter_confirmation'}}</div>
        </div>
      {{else}}
        <label for="Email" class="newsletter__label hidden-label">{{t 'general.newsletter_form.newsletter_email'}}</label>
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter--form">
          <div class="input-group">
            <input type="email" value="{{#if customer}}{{ customer.email }}{{/if}}" placeholder="{{t 'general.newsletter_form.newsletter_placeholder'}}" name="contact[email]" id="Email" class="input-group-field newsletter__input" autocorrect="off" autocapitalize="off">
            <span class="input-group-btn">
              <button type="submit" class="btn newsletter__submit" name="commit" id="Subscribe">
                <span class="newsletter__submit-text--large">{{t 'general.newsletter_form.submit'}}</span>
                <span class="newsletter__submit-text--small">
                  <span class="icon icon-arrow-right" aria-hidden="true"></span>
                </span>
              </button>
            </span>
          </div>
        </div>
      {{/if}}
    {{/form}}
  </div>
</div>

{{#schema}}
  {
    "name": "Newsletter",
    "class": "index-newsletter-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Subscribe to our newsletter"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "A short sentence describing what someone will receive by subscribing"
      },
      {
        "type": "paragraph",
        "content": "Any customers who sign up will have an account created for them in Shopify. [View customers](/admin/customers?query=&accepts_marketing=1)"
      }
    ],
    "presets": [{
      "name": "Newsletter signup",
      "category": "Promotional"
    }],
    "blocks" : []
  }
{{/schema}}
