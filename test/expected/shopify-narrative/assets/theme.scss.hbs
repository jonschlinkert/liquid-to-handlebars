.highlight {
  padding: ($section-mobile-space + ($gutter * 2)) 0 $section-mobile-space;
  background-color: $color-main-bg;

  @include media-query($medium-up) {
    padding: $section-desktop-space 0;
  }
}

.highlight__wrapper {
  position: relative;
  padding: ($gutter * 3) ($gutter * 2);

  @include media-query($medium-up) {
    @include display-flexbox();

    .ie9 & {
      @include clearfix();
    }
  }
}

.highlight__content-container,
.highlight__image-container {
  @include media-query($medium-up) {
    @include flex(1);
    width: 50%;

    .highlight--align-top & {
      @include align-self(flex-start)
    }

    .highlight--align-middle & {
      @include align-self(center)
    }

    .highlight--align-bottom & {
      @include align-self(flex-end)
    }
  }
}

.highlight__content-container {
  @include media-query($medium-up) {
    @include flex-order(2);

    .ie9 & {
      float: right;
    }
  }

  @include media-query($small) {
    width: 100%;
    margin-top: $gutter * 3;
  }


}

.highlight__border {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;

  &.has-animated,
  .supports-no-js &,
  .animations--disabled & {
    .highlight__line--top,
    .highlight__line--bottom {
      transition: width 0.5s ease-out 0.75s;
      width: 100%;
    }

    .highlight__line--right,
    .highlight__line--left {
      transition: height 0.5s ease-out 0.75s;
      height: 100%;
    }
  }
}

.highlight__line {
  position: absolute;
}

.highlight__line--top {
  top: 0;
  left: 0;
  height: 3px;
  width: 0;
}

.highlight__line--right {
  top: 0;
  right: 0;
  height: 0;
  width: 3px;
}

.highlight__line--bottom {
  bottom: 0;
  right: 0;
  height: 3px;
  width: 0;
}

.highlight__line--left {
  bottom: 0;
  left: 0;
  height: 0;
  width: 3px;
}

.highlight__image-container {
  position: relative;

  @include media-query($medium-up) {
    @include flex-order(1);

    .ie9 & {
      float: left;
    }
  }

  @include media-query($small) {
    position: relative;
    width: 100%;
    margin-top: -($gutter * 5);
    z-index: 2;
  }
}

.highlight__image-container--front {
  @include media-query($medium-up) {
    z-index: 2;
  }
}

.highlight__image-container--back {
  @include media-query($medium-up) {
    z-index: 0;
  }
}

.highlight__image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;

  @include media-query($small) {
    display: block;
    margin: 0 auto;
  }

  @include media-query($medium-up) {
    margin-left: -25%;
  }
}

.highlight__image--placeholder {
  position: relative;
}

$slow-drawer-transition: transform 0.45s cubic-bezier(0.645, 0.045, 0.355, 1);
$fast-drawer-transition: transform 0.55s cubic-bezier(0.645, 0.045, 0.355, 1);

.drawer {
  position: fixed;
  top: 0;
  right: -$cart-mobile-width;
  width: $cart-mobile-width;
  height: 100vh;
  transition: $fast-drawer-transition;
  @include transform(translateX(0));
  z-index: 20;

  @include media-query($medium-up) {
    right: -$cart-desktop-width;
    width: $cart-desktop-width;
  }

  .drawer--active & {
    display: block;
    transition: $slow-drawer-transition;
    @include transform(translateX(-$cart-mobile-width));

    @include media-query($medium-up) {
      @include transform(translateX(-$cart-desktop-width));
    }
  }
}

[data-drawer-push] {
  transition: $slow-drawer-transition;

  .drawer--active & {
    transition: $fast-drawer-transition;
    @include transform(translateX(-$cart-mobile-width));

    @include media-query($medium-up) {
      @include transform(translateX(-$cart-desktop-width));
    }
  }
}

.drawer-cover {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 0;
  background-color: $color-drawer-overlay;
  opacity: 0;
  pointer-events: none !important; // sass-lint:disable-line no-important
  z-index: 20;
  transition: opacity 0.25s ease-out;

  .ie9 & {
    display: none;
  }

  .drawer--active & {
    opacity: 0.3;
    height: 100%;
    pointer-events: auto !important; // sass-lint:disable-line no-important

    .ie9 & {
      display: block;
    }
  }
}

.ajax-cart__template {
  display: none;
}

.ajax-cart__discount-container--active {
  max-height: 100px;
  opacity: 1;
}


