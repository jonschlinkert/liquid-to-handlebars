<style>
  .newsletter-section {
    background-color: {{ section.settings.color_bg }};
  }
</style>

<div data-section-id="{{ section.id }}" data-section-type="newsletter-section">
  <div class="text-center">
    {{include 'newsletter-form",' heading: section.settings.heading, subheading: section.settings.subheading}}
  </div>
</div>

{{#schema}}
  {
    "name": "Newsletter",
    "class": "newsletter-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Subscribe to our newsletter"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subtext",
        "default": "Promotions, new products and sales. Directly to your inbox."
      },
      {
        "type": "color",
        "id": "color_bg",
        "label": "Background color",
        "default": "#f3f3f3"
      },
      {
        "type": "paragraph",
        "content": "Any customers who sign up will have an account created for them in Shopify. [View customers](/admin/customers?query=&accepts_marketing=1)"
      }
    ],
    "presets": [
      {
        "name": "Newsletter",
        "category": "Promotional"
      }
    ]
  }
{{/schema}}
