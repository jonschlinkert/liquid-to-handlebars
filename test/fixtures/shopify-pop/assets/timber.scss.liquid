  font-weight: 300;
  padding: $gutter / 2;
  white-space: normal;
  max-width: 160px;
  width: 100%;

  &:active,
  &:hover,
  &:focus {
    color: lighten($colorMenuText, 10%);
  }

  .site-nav__child-link--active & {
    opacity: 1;
    color: color-control-text($colorMenuText, 25%);
  }

  @include transition('all 0.3s ease');

